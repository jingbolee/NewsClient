<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.ljb.zhbj.view.TopNewsViewPager
            android:id="@+id/vp_top_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.ljb.zhbj.view.TopNewsViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_top_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="蜗居生活蜗居生活蜗居生活蜗居生活蜗居生活蜗居生活蜗居生活蜗居生活蜗居生活蜗居生活"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator_top_news_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                app:fillColor="#88FF0000"
                app:pageColor="#FF888888"
                app:radius="3dp"
                app:strokeWidth="0dp"
            />

        </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_news_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    ></ListView>
</LinearLayout>