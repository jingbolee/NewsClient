<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_top_news"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </android.support.v4.view.ViewPager>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/vp_top_news"
                    android:background="@android:color/darker_gray"
                    android:padding="5dp">
        <TextView android:id="@+id/tv_top_news_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:paddingLeft="5dp"
                  android:singleLine="true"
                  android:text="蜗居生活"
                  android:textColor="@android:color/white" android:textSize="14sp"/>
        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator_top_news_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
        />
    </LinearLayout>


    <ListView
        android:id="@+id/lv_news_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/vp_top_news"
        android:layout_weight="1"
    ></ListView>
</RelativeLayout>