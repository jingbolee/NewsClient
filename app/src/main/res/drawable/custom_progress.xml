<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">
    <shape android:innerRadius="12dp"
           android:shape="ring" android:thickness="3dp" android:useLevel="false">
        <gradient android:centerColor="#ffe4e1"
                  android:endColor="@android:color/holo_red_dark"
                  android:startColor="@android:color/white"></gradient>
    </shape>

</rotate>